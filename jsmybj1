<script>


var score=0;
var dealerHand=0;
var aces=0;
var dealerAces=0;

function p(x){
  var p=(Math.floor((Math.random())*x)+1);
  return p;
}
function draw(){
  y=p(13);
  return y;
}
function suit(){
  var y=p(4);switch (y){
  case 1: return "\u2666";break;
  case 2: return "\u2663"; break;
  case 3: return "\u2660"; break;
  case 4: return "\u2665"; break;
    } 
  return;
}
function kind(w){
  if(w==1)return "Ace";
    if(w==11)return "Jack";
    if(w==12)return "Queen";
  if(w==13)return "King";
  return "" + w;
  }

function total(m){
                    if(m>10)m=10;
                    score+=m;
                    if((score<=11)&&(m===1)) {return (score+=10)+(aces+=1);}
                    if(score>21 && aces>0){return score-=10;}
                  return score;}

function card(){
return draw();
}

function game(){
  y=card()
  total(y);
  return (kind(y))+ ' ' +suit();
}

//play
document.getElementById("play").addEventListener("click", function(){
    document.getElementById("a").innerHTML=game();
    document.getElementById("a").style.background="white";
    document.getElementById("a").style.border="1px solid black";
    document.getElementById("a").style.padding="15px 15px";
    document.getElementById("b").innerHTML=game();
    document.getElementById("b").style.background="white";
    document.getElementById("b").style.border="1px solid black";
    document.getElementById("b").style.padding="15px 15px";
    document.getElementById("d").innerHTML="Current score: "+score;
    document.getElementById("d").style.color="white";
});



//hit
document.getElementById("hit").addEventListener("click", function(){
  document.getElementById("c").innerHTML=game();
    document.getElementById("c").style.background="white";
    document.getElementById("c").style.border="1px solid black";
    document.getElementById("c").style.padding="15px 15px";
  document.getElementById("d").innerHTML="Updated score: "+score;
  if(score>21 && aces==0){alert("You busted!"); return;}
});

//stand
document.getElementById("stand").addEventListener("click", function(){
  return dealer();
});

function dealerScore(m){
                    if(m>10)m=10;
                    dealerHand+=m;
                    if((dealerHand<=11)&&(m===1)) {return (dealerAces+=1)+(dealerHand+=10);}
                    if(dealerHand>21 && dealerAces>0){return dealerHand-=10;}
                  return dealerHand;}

function dealerCard(){
    x=card()
    dealerScore(x)
    return (kind(x))+ ' ' +suit();
}

function dealer(){
  document.getElementById("f").innerHTML=dealerCard();
    document.getElementById("f").style.background="white";
    document.getElementById("f").style.border="1px solid black";
    document.getElementById("f").style.padding="15px 15px";
  document.getElementById("g").innerHTML=dealerCard(); 
    document.getElementById("g").style.background="white";
    document.getElementById("g").style.border="1px solid black";
    document.getElementById("g").style.padding="15px 15px";
  document.getElementById("h").innerHTML= "Dealer's total: " +dealerHand;
  document.getElementById("h").style.color="#000";
  while(dealerHand<score){
  document.getElementById("h").innerHTML=dealerCard();
    document.getElementById("h").style.background="white";
    document.getElementById("h").style.border="1px solid black";
    document.getElementById("h").style.padding="15px 15px";
  document.getElementById("j").innerHTML= "Dealer's total: " +dealerHand;
  document.getElementById("j").style.color="white";}
  if(dealerHand===score){alert("Dealer wins in a draw!"); return;}
  if(dealerHand==21){alert("Dealer wins with 21!"); return;}
  if(dealerHand>21 && dealerAces==0){alert("Dealer busted! You win!"); return;}
  if(dealerHand>=score){alert("Dealer wins this round!"); return;}
  if(dealerHand==21){alert("Dealer wins with 21!"); return;}
  return compare();
}

function compare(){
if(dealerHand<score){alert("You win!");}
else return alert("Bruh.");
}

</script>

</script>